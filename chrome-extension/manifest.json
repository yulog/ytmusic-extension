{
    "name": "YouTube Music Notifier",
    "version": "0.1",
    "manifest_version": 3,
    "description": "Notifies a native application of the currently playing song on YouTube Music.",
    "permissions": [
        "nativeMessaging"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "*://music.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://music.youtube.com/*"],
            "js": ["content.js"]
        }
    ]
}